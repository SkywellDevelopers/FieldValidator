<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_scroll_layout"
        tools:context="ua.com.skywell.fieldvalidatorproject.MainActivity">
        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:baselineAligned="false"
                android:id="@+id/name_and_surname_layout">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/nameTil">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nameEt"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:hint="@string/name_hint"
                        android:text="@string/name_sample"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/surnameTil"
                    android:layout_weight="1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/surnameEt"
                        android:maxLines="1"
                        android:maxLength="20"
                        android:hint="@string/surname_hint"
                        android:text="@string/surname_sample"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

           <android.support.design.widget.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/credentialsTil"
               android:layout_marginTop="5dp">
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/credentialsEt"
                   android:maxLines="1"
                   android:maxLength="40"
                   android:hint="@string/credentials_hint"
                   android:text="@string/credentials_sample"/>
           </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usernameTil"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usernameEt"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:hint="@string/username_hint"
                    android:text="@string/username_sample"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailTil"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailEt"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:hint="@string/email_hint"
                    android:text="@string/email_sample"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumberTil"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneNumberEt"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:hint="@string/phone_number_hint"
                    android:text="@string/phone_number_sample"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/creditCardTil"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/creditCardEt"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="16"
                    android:hint="@string/credit_card_hint"
                    android:text="@string/credit_card_sample"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordTil"
                android:layout_marginTop="5dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordEt"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:hint="@string/password_hint"
                    android:text="@string/password_sample"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/validateBtn"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:text="@string/validate_button_name"/>

        </LinearLayout>
    </ScrollView>
</layout>